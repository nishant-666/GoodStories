<div class="col" style="margin-top: 20px;">
<h2 class="ui header" style="color:#fafafa"></h2>
</div>

<div class="col-md-6 offset-md-3" style="margin-top: 40px;text-align:center">
<div class="ui message bounce animated" style="border-radius:20px;border-style:solid; border-bottom-width: thick;border-top-width:thick;border-color:#f44336">

  <div class="header" style="font-family: 'Montserrat', sans-serif">
  Greetings, <span style="color:#212121">{{name}}</span>
  </div>  
  <div class="ui divider" style="border-width: thin;border-color:#ef9a9a"></div>
  <p style="font-family: 'Carrois Gothic SC', sans-serif;">Welcome to GoodStories.</p>
      
</div>
</div>

{{#if stories}}
  <div id="desktop">
    <div class="ui divider"></div>
    <h1 class="ui header" style="color: white;padding:0px;text-align:center;">Your Stories</h1>
    <div class="ui divider"></div>
    <table class="ui celled fluid table selectable" style="margin-bottom:10px;padding:5px;border-radius:20px;border-style:solid; border-bottom-width: thick;border-top-width:thick;border-color:#f44336">
  <thead>
    <tr><th>Title</th>
    <th>Date</th>
    <th>Status</th>
 
  </tr></thead>
  <tbody>
   {{#each stories}}
        <tr>
        <td><a href="/stories/{{_id}}">{{title}}</a></td>
        <td data-label="Date">{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</td>
        <td data-label="Status"><span class="dash-status">{{status}}</span></td>
        <td data-label="Delete">
          <a class="ui blue fluid button" href="/stories/edit/{{_id}}">
          <i class="edit icon"></i>
          Edit Story
        </a>
        <form action="/stories/{{_id}}" method="POST" id="delete-form">
        <input type="hidden" name="_method" value="Delete">
        <button class="ui secondary fluid button" type="submit" style="margin-top: 10px;">
           <i class="trash icon"></i>
          Delete 
        </button>
        </form>
        </td>
        </tr>
   {{/each}}
    
  </tbody>
</table>
</div>

<div id="mobile"> 
  <div class="ui divider" style="color: white;text-align:center;"></div>
  <h2 class="ui header" style="color: white;text-align:center;">Your Stories</h2>
  <div class="ui divider" style="color: white;"></div>
    <table class="ui celled fluid table selectable" style="margin-bottom:10px;padding:20px;border-radius:20px;border-style:solid; border-bottom-width: thick;border-top-width:thick;border-color:#f44336">
 
  <tbody>
   {{#each stories}}
        <tr>
         <td><a href="/stories/{{_id}}" style="font-size:18px">{{title}}</a></td>
        <td data-label="Date" style="font-size: 12px;margin-left:7px">{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</td>
        
        <td data-label="Delete">
          <a class="ui blue fluid button" href="/stories/edit/{{_id}}">
          <i class="edit icon"></i>
          Edit Story
        </a>

        <form action="/stories/{{_id}}" method="POST" id="delete-form">
        <input type="hidden" name="_method" value="Delete">
        <button class="ui secondary fluid button" type="submit" style="margin-top: 10px;">
           <i class="trash icon"></i>
          Delete 
        </button>
        </form>
        </td>
        </tr>
   {{/each}}
    
  </tbody>
</table>
</div>
{{else}}
<div id="mobile">
<div style="text-align: center;color: #eeeeee;margin-top:50px">
<h3 style="font-family: 'Montserrat', sans-serif;font-size:20px"><b>This place seems a little lonely!</b></h3>
<div class="ui divider"></div>
<p style="font-family: 'Montserrat', sans-serif;font-size:16px">Start your stories by clicking the plus button below</p>
<div class="ui divider"></div>
</div>
</div>

<div id="desktop">
<div style="text-align: center;color: #eeeeee;margin-top:50px">
<h3 style="font-family: 'Montserrat', sans-serif;"><b>This place seems a little lonely!</b></h3>
<div class="ui divider"></div>
<p style="font-family: 'Montserrat', sans-serif;">Start your stories by clicking the plus button below</p>
<div class="ui divider"></div>
</div>
</div>
{{/if}}

